---
// IMPORTS ASTRO LAYOUTS
import Container from "@/layouts/container/index.astro"

// IMPORTS ASTRO ATOMS
import LargePrimaryButton from "@/atoms/buttons/primary/large/index.astro"
import Link from "@/atoms/links/index.astro"

const { data } = Astro.props
---
<section class="bg-primary py-20 md:mt-28">
    <Container>
        <section class="space-y-10">
            <h1 class="text-white text-4xl md:text-8xl font-bebas_neue uppercase tracking-wide">{ data.title }</h1>
            <div class="hidden md:block">
                <Link href={ data.button_link } aria_label="">
                    <LargePrimaryButton>{ data.button_text }</LargePrimaryButton>
                </Link>
            </div>
        </section>
    </Container>
</header>
